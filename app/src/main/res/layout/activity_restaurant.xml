<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.android.volley.toolbox.NetworkImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/icon"
            android:layout_gravity="left|top"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Restuarent Name"
            android:id="@+id/Name"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/Name"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Comment 1"
            android:id="@+id/comment1"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/ratingBar"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Comment 2"
            android:id="@+id/comment2"
            android:layout_below="@+id/comment1"
            android:layout_marginTop="38dp"
            android:layout_alignEnd="@+id/ratingBar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Comment 3"
            android:id="@+id/comment3"
            android:layout_below="@+id/comment2"
            android:layout_marginTop="54dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/smiley"
            android:src="@drawable/smiley"
            android:layout_below="@+id/ratingBar"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GÃ¥ til smiley ordning"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/smiley"
            android:layout_toRightOf="@+id/smiley" />

    </RelativeLayout>

</LinearLayout>

</ScrollView>