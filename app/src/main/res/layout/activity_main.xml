<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/menubar"  android:layout_width="fill_parent" android:layout_height="53.0dip">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">

                <ImageView
                    android:gravity="center"
                    android:id="@+id/my_visits"
                    android:background="@drawable/btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_action_user"
                    android:scaleType="center"
                    android:layout_weight="1.0" />

                <View android:id="@id/div1" android:background="#ffffff" android:layout_width="1px" android:layout_height="27.5dip" android:scaleType="fitXY" />

                <ImageView
                    android:gravity="center"
                    android:id="@+id/friends"
                    android:background="@drawable/btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_action_user_add"
                    android:scaleType="center"
                    android:layout_weight="1.0" />

                <View android:id="@id/div1" android:background="#ffffff" android:layout_width="1px" android:layout_height="27.5dip" android:scaleType="fitXY" />

                <ImageView
                    android:gravity="center"
                    android:id="@+id/top_20"
                    android:background="@drawable/btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:checked="false"
                    android:src="@drawable/ic_action_star"
                    android:scaleType="center"
                    android:layout_weight="1.0" />

                <View android:id="@id/div1" android:background="#ffffff" android:layout_width="1px" android:layout_height="27.5dip" android:scaleType="fitXY" />


                <ImageView
                    android:gravity="center"
                    android:id="@+id/gps"
                    android:background="@drawable/btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:checked="false"
                    android:src="@drawable/ic_action_locate"
                    android:scaleType="center"
                    android:layout_weight="1.0" />


            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <com.viewpagerindicator.UnderlinePageIndicator
        android:id="@+id/indicator"
        android:layout_width="360dp"
        android:layout_height="5dp"/>

    <android.support.v4.view.ViewPager android:id="@id/pager" android:background="@color/background_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" />
    </LinearLayout>
